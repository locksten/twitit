{
  "name": "@twitit/server",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "private": true,
  "main": "./dist/server.js",
  "scripts": {
    "watch": "tsc-watch --onSuccess \"npm run start\"",
    "start": "JWT_ACCESS_SECRET=${JWT_ACCESS_SECRET:-$npm_package_config_jwt_access_secret} DATABASE_URL=${DATABASE_URL:-$npm_package_config_shadow_db} NODE_PATH=dist node ./dist/server.js",
    "build": "tsc",
    "gen:db-types": "DATABASE_URL=$npm_package_config_shadow_db npx zapatos",
    "migrate": "DATABASE_URL=${DATABASE_URL:-$npm_package_config_dev_db} SHADOW_DATABASE_URL=$npm_package_config_shadow_db npx graphile-migrate"
  },
  "config": {
    "dev_db": "postgres://postgres:@localhost:5432/twitit",
    "shadow_db": "postgres://postgres:@localhost:5432/twitit_shadow",
    "root_db": "postgres://postgres:postgres@localhost:5432/postgres",
    "jwt_access_secret": "DEV_jwt_access_secret"
  },
  "dependencies": {
    "apollo-server-express": "^2.19.0",
    "bcrypt": "^5.0.0",
    "dataloader": "^2.0.0",
    "express": "^4.17.1",
    "gqtx": "^0.7.0",
    "graphile-migrate": "^1.0.2",
    "graphql": "^15.4.0",
    "jest": "^26.4.2",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "zapatos": "^3.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.10",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.6.3",
    "@types/pg": "^7.14.7",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.20.0",
    "prettier": "^2.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.2"
  },
  "eslintConfig": {
    "extends": ".custom-eslintrc.json",
    "overrides": [
      {
        "files": [
          "**/*.ts?(x)"
        ],
        "rules": {
          "@typescript-eslint/no-unused-vars": "off"
        }
      }
    ]
  }
}
